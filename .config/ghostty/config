# Font Configuration
font-size = 11
font-family = "" # reset previously set font
font-family = "DejaVuSansMono Nerd Font Mono"

# Window Configuration
window-decoration = false
window-padding-x = 0
window-padding-y = 0
background-opacity = 1.0
background-blur-radius = 32

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 3023

# Terminal features
mouse-hide-while-typing = true
copy-on-select = true
confirm-close-surface = false

# Disable annoying copied to clipboard notifications
app-notifications = no-clipboard-copy

clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false

# Key bindings for common actions
keybind = ctrl+c=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+zero=reset_font_size

# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Tab configuration
gtk-titlebar = false

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor
keybind = shift+enter=text:\n

# Rando stuff
gtk-single-instance = true

# Dank color generation
config-file = ./config-dankcolors
